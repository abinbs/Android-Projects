<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_headname1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WellCared\n You are cared!"
        android:textSize="20sp"
        android:textColor="#375899"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="16dp">

    </TextView>
    <TextView
        android:id="@+id/tv_headname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Groceries"
        android:textSize="20sp"
        android:textColor="#375899"
        android:gravity="left"
        android:textStyle="bold"
        android:padding="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <EditText
            android:id="@+id/et_grocery_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter items"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PS:If you have more items please include those in the above area"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/bt_grocery_find"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:background="#5bcc3b"
            android:gravity="center_horizontal"
            android:text="Buy for Me"
            android:onClick="onButtongClick"
            android:clickable="true"
            android:layout_marginRight="16dp"/>
        <Button
            android:id="@+id/bt_grocery_find2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:background="#5bcc3b"
            android:gravity="center_horizontal"
            android:text="View"
            android:onClick="onButtongbClick"
            android:clickable="true"
            android:layout_marginRight="16dp"/>
        <Button
            android:id="@+id/bt_grocery_clear"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:background="#5bcc3b"
            android:gravity="center_horizontal"
            android:text="Clear"
            android:onClick="onButtongcClick"
            android:clickable="true"
            android:layout_marginRight="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_grocery_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Spend your life with people who run errands for you!"
            android:textSize="24dp"
            android:textColor="#375899"/>



</LinearLayout>
